{
  "name": "task-organizer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "e2e"
  ],
  "scripts": {
    "lint": "npm --workspaces run lint",
    "typecheck": "npm --workspaces run typecheck",
    "test:unit": "npm --workspaces --if-present run test:unit",
    "test": "npm run test:unit",
    "e2e": "npm --workspace e2e run test",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run e2e",
    "contract:guard": "bash scripts/contract-guard.sh"
  },
  "devDependencies": {
    "wait-on": "^9.0.4"
  }
}
